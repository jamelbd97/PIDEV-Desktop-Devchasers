<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pidevv.AffichageController">
   <children>
      <TableView fx:id="affichage" layoutX="82.0" layoutY="86.0" onMouseClicked="#changerPubActuelle" prefHeight="200.0" prefWidth="480.0">
        <columns>
          <TableColumn fx:id="description" prefWidth="75.0" text="description" />
            <TableColumn fx:id="titre" prefWidth="75.0" text="titre" />
            <TableColumn fx:id="Date" prefWidth="75.0" text="Date" />
            <TableColumn fx:id="nbr_like" prefWidth="75.0" text="nbr like" />
            <TableColumn fx:id="nbr_dislike" prefWidth="75.0" text="nbr dislike" />
        </columns>
      </TableView>
      <Button fx:id="btnAjout" layoutY="200.0" mnemonicParsing="false" onAction="#ajouter" prefHeight="39.0" prefWidth="73.0" text="Ajouter" />
      <TextField fx:id="txrecherche" layoutX="279.0" layoutY="38.0" promptText="recherche par titre" />
      <Button fx:id="btn_recherche" layoutX="452.0" layoutY="38.0" mnemonicParsing="false" onAction="#recherche" text="Recherche" />
      <Button fx:id="btnModifier" layoutX="145.0" layoutY="338.0" mnemonicParsing="false" onAction="#Modifier" text="Modifier publication" />
      <Text fx:id="idPubActuelle" layoutX="289.0" layoutY="316.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
      <Button fx:id="btnSupprimer" layoutX="322.0" layoutY="338.0" mnemonicParsing="false" onAction="#Supprimer" text="Supprimer publication" />
   </children>
</AnchorPane>
